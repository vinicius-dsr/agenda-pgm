generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id                    String                  @id @default(uuid())
  name                  String                  @unique
  icon                  String
  establishments        Establishment[]         @relation("EstablishmentCategories")
  EstablishmentCategory EstablishmentCategory[]
}

model Establishment {
  id                    String                  @id @default(uuid())
  name                  String
  description           String
  operation             String
  imageUrl              String
  address               String
  phones                String[]
  categories            Category[]              @relation("EstablishmentCategories")
  EstablishmentCategory EstablishmentCategory[]
}

model EstablishmentCategory {
  establishmentId String
  categoryId      String

  establishment Establishment @relation(fields: [establishmentId], references: [id], onDelete: Cascade)
  category      Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([establishmentId, categoryId])
}
